            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners"
                android:scaleType="fitXY"
                android:src="@drawable/steps" />


        </LinearLayout>
    </ScrollView>

